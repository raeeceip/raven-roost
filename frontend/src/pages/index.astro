---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import { Button } from "../components/ui/button";
import {
	MapIcon,
	SearchIcon,
	ClockIcon,
	CompassIcon,
	FilterIcon,
	ArrowRightIcon,
} from "lucide-react";
---

<Layout title="Home - Roost">
	<main class="py-12 bg-gray-100">
		<Container>
			<div class="grid md:grid-cols-2 gap-8">
				<!-- Left Column: Search and Map -->
				<div class="space-y-8">
					<div class="bg-white rounded-lg shadow-sm p-6">
						<h2 class="text-2xl font-bold text-gray-800 mb-4">
							Find Your Perfect Study Space
						</h2>
						<p class="text-gray-600 mb-6">
							Discover available study spaces across campus in real-time.
							Whether you need a quiet corner or a group study room, Roost helps
							you find the perfect spot.
						</p>
						<div class="flex flex-col sm:flex-row gap-4">
							<Button
								href="/search"
								class="flex-1 bg-[#BA0C2F] hover:bg-[#98091F] text-white"
							>
								<SearchIcon class="w-5 h-5 mr-2" />
								Search Spaces
							</Button>
							<Button
								href="/map"
								variant="outline"
								class="flex-1 border-[#BA0C2F] text-[#BA0C2F] hover:bg-[#BA0C2F] hover:text-white"
							>
								<MapIcon class="w-5 h-5 mr-2" />
								View Map
							</Button>
						</div>
					</div>
					<div class="bg-white rounded-lg shadow-sm p-6">
						<h2 class="text-xl font-semibold text-gray-800 mb-4">Campus Map</h2>
						<img
							src="/images/campus-map.jpg"
							alt="Carleton University Campus Map"
							class="w-full h-64 object-cover rounded-lg"
						/>
					</div>
				</div>

				<!-- Right Column: Features and CTA -->
				<div class="space-y-8">
					<div class="bg-white rounded-lg shadow-sm p-6">
						<h2 class="text-xl font-semibold text-gray-800 mb-4">
							Why Choose Roost?
						</h2>
						<ul class="space-y-4">
							<li class="flex items-start">
								<ClockIcon class="w-6 h-6 text-[#BA0C2F] mr-3 flex-shrink-0" />
								<div>
									<h3 class="font-semibold text-gray-800">
										Real-time Availability
									</h3>
									<p class="text-gray-600">
										See which study spaces are currently available across
										campus.
									</p>
								</div>
							</li>
							<li class="flex items-start">
								<CompassIcon
									class="w-6 h-6 text-[#BA0C2F] mr-3 flex-shrink-0"
								/>
								<div>
									<h3 class="font-semibold text-gray-800">Interactive Map</h3>
									<p class="text-gray-600">
										Navigate campus easily with our interactive map interface.
									</p>
								</div>
							</li>
							<li class="flex items-start">
								<FilterIcon class="w-6 h-6 text-[#BA0C2F] mr-3 flex-shrink-0" />
								<div>
									<h3 class="font-semibold text-gray-800">Advanced Search</h3>
									<p class="text-gray-600">
										Filter spaces by capacity, amenities, and noise level.
									</p>
								</div>
							</li>
						</ul>
					</div>
					<div class="bg-[#BA0C2F] rounded-lg shadow-sm p-6 text-white">
						<h2 class="text-xl font-semibold mb-4">
							Ready to Find Your Study Space?
						</h2>
						<p class="mb-6">
							Join thousands of Carleton students who use Roost to maximize
							their study time.
						</p>
						<Button
							href="/signup"
							class="w-full bg-white text-[#BA0C2F] hover:bg-gray-100"
						>
							Get Started Now
							<ArrowRightIcon class="w-5 h-5 ml-2" />
						</Button>
					</div>
				</div>
			</div>
		</Container>
	</main>
</Layout>
