// app/views/pages/home.astro

import Layout from "../../layouts/Layout.astro"; const { message, featured_spaces
} = Astro.props;

<Layout title="Home - Roost">
	<main class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold mb-8">{message}</h1>

		{
			featured_spaces && featured_spaces.length > 0 && (
				<div class="space-y-4">
					<h2 class="text-2xl font-semibold">Featured Study Spaces</h2>
					<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
						{featured_spaces.map((space: any) => (
							<div class="p-4 bg-white shadow rounded-lg">
								<h3 class="font-bold">{space.name}</h3>
								<p class="text-gray-600">{space.description}</p>
								<div class="mt-2">
									<span class="text-sm bg-green-100 text-green-800 px-2 py-1 rounded">
										{space.status}
									</span>
								</div>
							</div>
						))}
					</div>
				</div>
			)
		}
	</main>
</Layout>
